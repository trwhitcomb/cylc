import re, os
from cylc.execute import execute
from optparse import OptionParser
from cylc.registration import centraldb

parser = OptionParser( usage = """cylc [db] export [OPTIONS] SOURCE [TARGET]

Export suites or groups of suites to the central suite database. 

Central registrations always start with the suite owner's username. If a
target name is not given ... 

Arguments:
    SOURCE  - Suite to export to the central database
    TARGET  - Target central suite name, if different from SOURCE.""" )  

parser.add_option( "-v","--verbose",
        help="Print extra information.",
        action="store_true", default=False, dest="verbose" )

( options, args ) = parser.parse_args()

source = args[0]
if len(args) == 2:
    target = args[1]
elif len(args) == 1:
    target = args[0]
else:
    parser.error('Wrong number of arguments')

owner = os.environ['USER']
target_dir = os.path.join( centraldb.dir, owner )

if options.verbose:
    verbose = '-v '
else:
    verbose = ' '

command = 'cylc db copy --export ' + verbose + source + ' ' + target + ' ' + target_dir
execute( re.split('\s+', command) )
